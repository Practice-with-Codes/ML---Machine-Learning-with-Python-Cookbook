   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Enter a number: 23\n",
      "positive\n",
      "Enter a number: -45\n",
      "negative\n",
      "Enter a number: 0\n",
      "zero\n"
     ]
    }
   ],
   "source": [
    "def sign(x):\n",
    "    x = int(input(\"Enter a number: \"))\n",
    "    if x > 0:\n",
    "        return 'positive'\n",
    "    elif x < 0:\n",
    "        return 'negative'\n",
    "    else:\n",
    "        return 'zero'\n",
    "for x in [-1, 0, 1]:\n",
    "    print(sign(x))"
   ]
  }
